.container
  max-width 1280px
  width 100%
  margin 0 auto
  height inherit
  +is-1080p()
    max-width 1600px
  +is-laptop()
    max-width 1200px
  +is-tablet()
    max-width initial
    padding 0 30px

.d-flex
  display flex
  flex-wrap wrap

.row
  display flex
  width 100%

.justify-center
  justify-content center

.justify-space-around
  justify-content space-around

.justify-space-between
  justify-content space-between

.justify-space-evenly
  justify-content space-evenly

.align-center
  align-items center

.align-stretch
  align-items stretch

.align-start
  align-items flex-start

.align-end
  align-items flex-end

.align-baseline
  align-items baseline

.direction-column
  flex-direction column

.direction-row
  flex-direction row

.flex-auto
  flex auto

.relative
  position relative

.absolute
  position absolute

.fixed
  position fixed

.column
  margin 0 0.5rem
  flex 1 1 0px
  &:nth-child(1)
    margin-left 0
  &[class^="is-"]
    flex-shrink 1
    flex-grow 0
  &:last-child
    margin-right 0

  for size in (1..12)
    &.is-{size}
      width "calc(%s - 1rem)" % ((size / 12) * 100%)
      flex-basis @width
      &.column:last-child
        width (size / 12) * 100%
        flex-basis @width

// Size
.w-100
  width 100vw

.h-100
  height 100vh

.w-fill
  width 100%

.h-fill
  height 100%

